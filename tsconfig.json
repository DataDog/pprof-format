{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "Node16",
    "declaration": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
